{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",

  // Paramètres
  // Contient les paramètres pour configurer et personnaliser le déploiement.
  "parameters": {

    // Localisation
    // Définit la région Azure où les ressources seront déployées.
    "location": {
      "value": "canadacentral"
    },

    // Type de disque OS
    // Indique le type de stockage pour les disques système des VM, ici "StandardSSD_LRS".
    "osDiskType": {
      "value": "StandardSSD_LRS"
    },

    // Préfixes d'adresses
    // Définit les plages d'adresses IP pour le réseau virtuel (VNet).
    "addressPrefixes": {
      "value": [
        "10.0.0.0/16"
      ]
    },
    // Sous-réseaux
    // Spécifie les sous-réseaux à inclure dans le VNet.
    "subnets": {
      "value": [
        {
          "name": "default",
          "properties": {
            "addressPrefix": "10.0.0.0/20"
          }
        }
      ]
    },

    // Référence au VNet
    // Identifiant unique du réseau virtuel existant.
    "virtualNetworkId": {
      "value": "/subscriptions/2ca40756-e319-40dd-84a5-ca8148b8ed59/resourceGroups/TP1_Deploiement/providers/Microsoft.Network/virtualNetworks/TP1_Deploiement-vnet"
    },

    // Nom du VNet
    // Nom de l'objet réseau virtuel.
    "virtualNetworkName": {
      "value": "TP1_Deploiement-vnet"
    },

    // Groupes de sécurité réseau (NSG)
    // Définit les règles de sécurité réseau pour contrôler le trafic autorisé ou bloqué.
    "networkSecurityGroups": {
      "value": [
        {
          "name": "basicNsgTP1_Deploiement-vnet-nic01",
          "id": "/subscriptions/2ca40756-e319-40dd-84a5-ca8148b8ed59/resourceGroups/TP1_Deploiement/providers/Microsoft.Network/networkSecurityGroups/basicNsgTP1_Deploiement-vnet-nic01",
          "rules": [
            {
              "name": "Tcp",
              "properties": {
                "priority": 300,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "80"
              }
            }
          ]
        }
      ]
    },

    // Configuration des interfaces réseau (NIC)
    // Définit les propriétés des interfaces réseau utilisées par les machines virtuelles.
    "networkInterfaceConfigurations": {
      "value": [
        {
          "name": "TP1_Deploiement-vnet-nic01",
          "primary": true,
          "subnetId": "/subscriptions/2ca40756-e319-40dd-84a5-ca8148b8ed59/resourceGroups/TP1_Deploiement/providers/Microsoft.Network/virtualNetworks/TP1_Deploiement-vnet/subnets/default",
          "applicationGatewayBackendAddressPools": [],
          "loadBalancerBackendAddressPools": [
            {
              "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('loadBalancerName'), parameters('backendPoolName'))]"
            }
          ],
          "applicationSecurityGroups": [],
          "loadBalancerInboundNatPools": [],
          "enableAcceleratedNetworking": false,
          "nsgName": "basicNsgTP1_Deploiement-vnet-nic01",
          "nsgId": "/subscriptions/2ca40756-e319-40dd-84a5-ca8148b8ed59/resourceGroups/TP1_Deploiement/providers/Microsoft.Network/networkSecurityGroups/basicNsgTP1_Deploiement-vnet-nic01",
          "pipName": "publicIp-TP1_Deploiement-vnet-nic01"
        }
      ]
    },

    // Backend pool
    // Nom du pool backend pour équilibrage de charge.
    "backendPoolName": {
      "value": "bepool"
    },

    // Load balancer
    // Définit les configurations pour l'équilibreur de charge.
    "loadBalancerName": {
      "value": "LoadBalTP1"
    },

    "/" "Règles",
    "d'équilibrage": null,
    // Configure les ports, protocoles et règles pour l'équilibreur de charge.
    "loadbalancingRuleFrontEndPort": {
      "value": 80
    },
    "loadbalancingRuleBackendEndPort": {
      "value": 80
    },
    "loadbalancingRuleProtocol": {
      "value": "Tcp"
    },
    "InboundNATRuleFrontEndPortRangeStart": {
      "value": 50000
    },

    // Configuration des machines virtuelles (VM)
    // Nom de la VM et du groupe d'échelle (Scale Set).
    "vmName": {
      "value": "VMTP1"
    },
    "virtualMachineScaleSetName": {
      "value": "VMTP1"
    },
    "instanceCount": {
      "value": "2"
    },
    "instanceSize": {
      "value": "Standard_DS1_v2"
    },
    "zone": {
      "value": [
        "1",
        "3"
      ]
    },
    "zoneBalance": {
      "value": "false"
    },
    "platformFaultDomainCount": {
      "value": "1"
    },
    "scaleInPolicy": {
      "value": {
        "rules": [
          "Default"
        ],
        "forceDeletion": false
      }
    },
    "upgradePolicy": {
      "value": "Manual"
    },
    "hibernationEnabled": {
      "value": false
    },
    "adminUsername": {
      "value": "bravo"
    },
    "adminPassword": {
      "value": null
    },
    "customData": {
      "value": null
    },
    "securityType": {
      "value": "TrustedLaunch"
    },
    "secureBoot": {
      "value": true
    },
    "vTPM": {
      "value": true
    },

    // Surveillance et réparation automatique
    // Configure les extensions de santé pour surveiller et réparer les VM.
    "healthExtensionProtocol": {
      "value": "http"
    },
    "healthExtensionPort": {
      "value": 80
    },
    "healthExtensionRequestPath": {
      "value": "/"
    },
    "autoRepairsPolicyEnabled": {
      "value": false
    },
    "gracePeriod": {
      "value": "PT10M"
    },
    "autoRepairsAction": {
      "value": "Replace"
    }
  }
}